{
    "dist": {
        "zepto": {
            "path": "src/zepto",
            "files": "polyfill zepto detect event ajax form fx",
            "dest": "dist/zepto.js",
            "banner": "/* Zepto @version - @files - zeptojs.com/license */"
        },
        "gmu": {
            "path": "src",
            "cssPath": "assets",
            "all": ["widget/**.js", "core/imglazyload.js"],
            "dest": "dist/gmu.js",
            "exclude": [],
            "aviableThemes": ["default", "blue"],
            "banner": "/* Gmu v@version - @files */"
        }
    },

    "fis": {
        "dest": "dist/fis/@version/widget"
    },

    "jshint": {
        "core": {
            "src": ["_src/core/**.js", "_src/widget/**.js"],
            "config": ".jshintrc"
        }
    }
}